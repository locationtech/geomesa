        </file>
        <file>
            <source>../geomesa-accumulo-gs-plugin/README.md</source>
            <destName>README-accumulo-gs-plugin.md</destName>
            <outputDirectory>docs</outputDirectory>
        </file>
        <file>
            <source>../../geomesa-blobstore/README.md</source>
            <destName>README-blobstore.md</destName>
            <outputDirectory>docs</outputDirectory>
        </file>
        <file>
            <source>../../geomesa-blobstore/geomesa-blobstore-handlers/geomesa-blobstore-gdal-handler</source>
            <destName>README-blobstore-gdal-handler.md</destName>
            <outputDirectory>docs</outputDirectory>
        </file>
        <file>
            <source>../../geomesa-stream/README.md</source>
            <destName>README-stream.md</destName>
            <outputDirectory>docs</outputDirectory>
        </file>
        <file>
            <source>../../geomesa-convert/README.md</source>
            <destName>README-convert.md</destName>
            <outputDirectory>docs</outputDirectory>
        </file>
        <file>
            <source>../geomesa-accumulo-jobs/README.md</source>
            <destName>README-jobs.md</destName>
            <outputDirectory>docs</outputDirectory>
        </file>
        <file>
            <source>../geomesa-accumulo-compute/README.md</source>
            <destName>README-compute.md</destName>
            <outputDirectory>docs</outputDirectory>
        </file>
        <file>
            <source>../geomesa-accumulo-distributed-runtime/README.md</source>
            <destName>README-accumulo-distributed-runtime.md</destName>
            <outputDirectory>docs</outputDirectory>
        </file>
        <file>
            <source>../../geomesa-web/geomesa-web-data/README.md</source>
            <destName>README-web-data.md</destName>
            <outputDirectory>docs</outputDirectory>
        </file>
        <file>
            <source>../../geomesa-process/README.md</source>
            <destName>README-process.md</destName>
            <outputDirectory>docs</outputDirectory>
        </file>
        <!-- geomesa-site.xml.template -->
        <file>
            <source>../../geomesa-utils/src/main/resources/org/locationtech/geomesa/geomesa-site.xml.template</source>
            <destName>geomesa-site.xml.template</destName>
            <outputDirectory>conf</outputDirectory>
        </file>
        <!-- autocomplete -->
        <file>
            <source>../geomesa-accumulo-tools/target/autocomplete.sh</source>
            <destName>autocomplete.sh</destName>
            <outputDirectory>conf</outputDirectory>
        </file>
    </files>
</component>
