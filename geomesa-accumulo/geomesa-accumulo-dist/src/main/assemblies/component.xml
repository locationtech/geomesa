            <outputDirectory>docs</outputDirectory>
        </file>
        <file>
            <source>../../geomesa-utils/README.md</source>
            <destName>README-utils.md</destName>
            <outputDirectory>docs</outputDirectory>
        </file>
        <file>
            <source>../geomesa-accumulo-datastore/README.md</source>
            <destName>README-accumulo-datastore.md</destName>
            <outputDirectory>docs</outputDirectory>
        </file>
        <file>
            <source>../geomesa-accumulo-raster/README.md</source>
