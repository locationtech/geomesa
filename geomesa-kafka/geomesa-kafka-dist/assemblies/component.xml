<?xml version="1.0" encoding="UTF-8"?>
<component xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/component/1.1.2"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/component/1.1.2 http://maven.apache.org/xsd/component-1.1.2.xsd">
    <dependencySets>
        <dependencySet>
            <outputDirectory>dist/gs-plugins</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <useStrictFiltering>true</useStrictFiltering>
            <includes>
                <include>org.locationtech.geomesa:geomesa-kafka-${kafka.maj.version}-gs-plugin*</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>dist/converters</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <useStrictFiltering>true</useStrictFiltering>
            <includes>
                <include>org.locationtech.geomesa:geomesa-tools*:jar:data</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <directoryMode>755</directoryMode>
            <fileMode>0644</fileMode>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <useStrictFiltering>true</useStrictFiltering>
            <excludes>
                <exclude>org.locationtech.geomesa:geomesa-kafka-${kafka.maj.version}-gs-plugin*</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>../../../</directory>
            <fileMode>0644</fileMode>
            <includes>
                <include>LICENSE.txt</include>
            </includes>
        </fileSet>

        <!-- Kafka tools filesets -->
        <fileSet>
            <directory>../../geomesa-kafka-tools/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <directoryMode>755</directoryMode>
            <fileMode>0755</fileMode>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>../../geomesa-kafka-tools/conf</directory>
            <outputDirectory>conf</outputDirectory>
            <fileMode>0644</fileMode>
            <filtered>false</filtered>
            <directoryMode>755</directoryMode>
        </fileSet>

        <!-- Common Tools filesets -->
        <fileSet>
            <directory>../../../geomesa-tools/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <directoryMode>755</directoryMode>
            <fileMode>0755</fileMode>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>../../../geomesa-tools/conf</directory>
            <outputDirectory>conf</outputDirectory>
            <fileMode>0644</fileMode>
            <filtered>false</filtered>
            <directoryMode>755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>../../../geomesa-tools/examples</directory>
            <outputDirectory>examples</outputDirectory>
            <fileMode>0644</fileMode>
            <filtered>false</filtered>
            <directoryMode>755</directoryMode>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>../../../README.md</source>
            <outputDirectory>docs</outputDirectory>
        </file>
        <file>
            <source>../../../geomesa-archetypes/geomesa-archetypes-gs-plugin/README.md</source>
            <destName>README-gs-plugin.md</destName>
            <outputDirectory>docs</outputDirectory>
        </file>
        <file>
            <source>../../../geomesa-utils/README.md</source>
            <destName>README-utils.md</destName>
            <outputDirectory>docs</outputDirectory>
        </file>
        <file>
            <source>../../geomesa-kafka-datastore/README.md</source>
            <destName>README-kafka-${kafka.maj.version}-datastore.md</destName>
            <outputDirectory>docs</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>../../geomesa-kafka-gs-plugin/README.md</source>
            <destName>README-kafka-${kafka.maj.version}-gs-plugin.md</destName>
            <outputDirectory>docs</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>../../../geomesa-convert/README.md</source>
            <destName>README-convert.md</destName>
            <outputDirectory>docs</outputDirectory>
        </file>
        <file>
            <source>../../../geomesa-web/geomesa-web-data/README.md</source>
            <destName>README-web-data.md</destName>
            <outputDirectory>docs</outputDirectory>
        </file>
        <file>
            <source>../../../geomesa-process/README.md</source>
            <destName>README-process.md</destName>
            <outputDirectory>docs</outputDirectory>
        </file>
        <!-- geomesa-site.xml.template -->
        <file>
            <source>../../../geomesa-utils/src/main/resources/org/locationtech/geomesa/geomesa-site.xml.template</source>
            <destName>geomesa-site.xml.template</destName>
            <outputDirectory>conf</outputDirectory>
        </file>
        <!-- autocomplete -->
        <file>
            <source>../../geomesa-kafka-tools/geomesa-kafka-${kafka.maj.version}-tools/target/autocomplete.sh</source>
            <destName>autocomplete.sh</destName>
            <outputDirectory>conf</outputDirectory>
        </file>
    </files>
</component>
