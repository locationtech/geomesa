        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <avro.version>${confluent.avro.version}</avro.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.locationtech.geomesa</groupId>
